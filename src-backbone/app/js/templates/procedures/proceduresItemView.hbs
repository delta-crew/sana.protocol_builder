<a href="/{{ currentLanguage }}/procedures/{{ id }}" title="{{ i18n "Edit this procedure" }}" class="title">
    {{ title }}
</a>
{{#if isShared}}
    <span class="procedure-label label label-success">Shared</span>
{{/if}}
{{#if isForked}}
    <span class="procedure-label label label-info">Forked</span>
{{/if}}
<span class="procedure-info author">
    <strong>{{ i18n "Author" }}:</strong> {{ author }}
</span>
<span class="procedure-info last-modified">
    <strong>{{ i18n "Last Modified" }}:</strong> {{ formatDate last_modified }}
</span>
<a class="download glyphicon glyphicon-download-alt" title="{{ i18n "Download this procedure as XML" }}"></a>
<a class="delete glyphicon glyphicon-remove" title="{{ i18n "Delete this procedure" }}"></a>
